{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Projects */
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    /* Modules */
    "rootDir": "./src",
    /* Emit */
    "outDir": "./dist/tsc",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

